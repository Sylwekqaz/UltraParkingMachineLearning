<Window x:Class="ContourMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContourMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image x:Name="PreviewImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" MouseUp="PreviewImage_OnMouseUp"/>
        <StackPanel HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Orientation="Horizontal"  >
            <Button x:Name="AddCountur" Content="Add New Countur" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="106" Click="AddCountur_Click" />
            <Button x:Name="CleatLastPoint" Content="Cleat Last Point" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="92" Click="CleatLastPoint_Click"/>
            <Button x:Name="CleatLastCountur" Content="Cleat Last Countur" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="108" Click="CleatLastCountur_Click" />
        </StackPanel>

    </Grid>
</Window>
