<Window x:Class="Inż.Views.OccupyMarkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inż.Views"
        mc:Ignorable="d"
        KeyUp="OccupyMarkDialog_OnKeyUp"
        WindowStartupLocation="CenterScreen"
        Title="OccupyMarkDialog" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Grid.ColumnSpan="2"  x:Name="PreviewControl"  />
        <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="0"      x:Name="OccupiedControl" Click="OccupiedControl_OnClick" Content="Zajęte (1)" />
        <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="1"      x:Name="FreeControl"     Click="FreeControl_OnClick"     Content="Wolne (2)" />

    </Grid>
</Window>
